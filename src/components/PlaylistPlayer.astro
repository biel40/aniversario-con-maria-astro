    .volume-slider {
      flex: 1;
      height: 4px;
      background: #e2e8f0;
      border-radius: 2px;
      outline: none;
      -webkit-appearance: none;
    }

    .volume-slider::-webkit-slider-thumb {
      -webkit-appearance: none;
      width: 16px;
      height: 16px;
      background: #ff6b9d;
      border-radius: 50%;
