      transition: all 0.3s ease;
    }

    .playlist-toggle {
      width: 100%;
      background: rgba(255, 107, 157, 0.1);
      border: none;
      padding: 10px;
      border-radius: 10px;
      color: #ff6b9d;
      cursor: pointer;
      font-size: 0.9rem;
      font-weight: 500;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      margin-bottom: 10px;
    }

    .playlist-toggle:hover {
      background: rgba(255, 107, 157, 0.2);
    }

